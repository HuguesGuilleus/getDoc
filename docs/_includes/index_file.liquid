{%- assign pageLang = page.path | split: '/' | first -%}
<ul>
  {%- for file in site.pages -%}
  {%- assign fileLang = file.path | split: '/' | first -%}
    {%- if fileLang == pageLang %}
      <li><a href="{{file.name|remove:".md"}}">{{file.title}}</a></li>
    {%- endif -%}
  {%- endfor %}
</ul>
